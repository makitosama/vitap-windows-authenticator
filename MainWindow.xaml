<Window x:Class="VitapAuthenticator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VIT-AP WiFi Authenticator" Height="750" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1F1F1F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Input Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="650" Margin="10">
            <TextBlock Text="VIT-AP WiFi Authenticator" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333"/>
            
            <TextBlock Text="Username" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="35" Padding="10" FontSize="14" Foreground="#FFFFFF" Background="#2D2D2D" BorderBrush="#444444" BorderThickness="1"/>
            
            <TextBlock Text="Password" Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" FontSize="14" Foreground="#FFFFFF" Background="#2D2D2D" BorderBrush="#444444" BorderThickness="1"/>
            
            <Button x:Name="LoginButton" Content="Login" Height="40" Margin="0,25,0,0" Background="#007ACC" Foreground="White" FontSize="14" Click="LoginButton_Click"/>
            
            <TextBlock x:Name="StatusTextBlock" Text="" Margin="0,15,0,0" Foreground="#32F2F2F" TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Log Display Section -->
        <Border Grid.Row="1" Margin="10" BorderBrush="#444444" BorderThickness="1" Background="#1A1A1A" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Debug Log" FontSize="14" FontWeight="Bold" Foreground="#CCCCCC" Margin="10,10,10,5"/>
                
                <TextBox Grid.Row="1" x:Name="LogTextBox" Height="Auto" Margin="10" 
                         Background="#0D0D0D" Foreground="#00FF00" 
                         BorderBrush="#333333" BorderThickness="1"
                         FontFamily="Courier New" FontSize="11" 
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap" Padding="10"/>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                    <Button x:Name="ClearLogButton" Content="Clear Log" Height="30" Padding="15,5" 
                            Background="#555555" Foreground="White" FontSize="12" Margin="0,0,10,0" Click="ClearLogButton_Click"/>
                    <Button x:Name="ExportLogButton" Content="Export Log" Height="30" Padding="15,5" 
                            Background="#555555" Foreground="White" FontSize="12" Click="ExportLogButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
