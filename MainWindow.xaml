<Window x:Class="VitapAuthenticator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VIT-AP WiFi Authenticator" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="VIT-AP WiFi Authentication" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333"/>
            
            <TextBlock Text="Username" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="35" Padding="10" FontSize="14"/>
            
            <TextBlock Text="Password" Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" FontSize="14"/>
            
            <Button x:Name="LoginButton" Content="Login" Height="40" Margin="0,25,0,0" Background="#007ACC" Foreground="White" FontSize="14" Click="LoginButton_Click"/>
            
            <TextBlock x:Name="StatusTextBlock" Text="" Margin="0,15,0,0" Foreground="#D32F2F" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
